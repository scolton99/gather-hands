{
    "manifest_version": 2,
    "name": "Gather Hands",
    "version": "1.2.0",
    "description": "Plays a tone when a new hand is raised or someone enters the room in gather.town.",
    "author": "Spencer Colton",
    "content_scripts": [
        {
            "matches": [
                "https://gather.town/app/*"
            ],
            "js": ["js/index.js"]
        }
    ],
    "permissions": [
        "storage"
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "web_accessible_resources": [
        "assets/*"
    ]
}